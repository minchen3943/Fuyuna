# 应用运行环境 (development/production)
NODE_ENV=development

# PostgreSQL 数据库配置
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=postgres or your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_database_name

# GraphQL 配置
GRAPHQL_AUTO_SCHEMA_FILE=src/schema.gql
GRAPHQL_SORT_SCHEMA=true

# JWT 认证配置
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d
JWT_ISSUER=your_jwt_issuer
JWT_ALGORITHM=HS256

# 腾讯云 COS 配置
TENCENT_COS_SECRET_ID=your_cos_secret_id
TENCENT_COS_SECRET_KEY=your_cos_secret_key
TENCENT_COS_BUCKET_NAME=your_cos_bucket_name
TENCENT_COS_REGION=ap-guangzhou

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD_EXISTS=false
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600
REDIS_DB=0

# 端口号配置
NEXT_PORT=3000
NEST_PORT=3001